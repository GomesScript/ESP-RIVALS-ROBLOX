-- Criar e configurar o ScreenGui
local player = game.Players.LocalPlayer
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = player.PlayerGui

-- Criar e configurar o Frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 200, 0, 100)
frame.Position = UDim2.new(0.5, -100, 0.5, -50)
frame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)  -- Cor do fundo do Frame
frame.Parent = screenGui

-- Criar e configurar o TextButton
local toggleButton = Instance.new("TextButton")
toggleButton.Size = UDim2.new(1, 0, 1, 0)
toggleButton.Text = "Toggle ESP"
toggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)  -- Cor do texto
toggleButton.BackgroundColor3 = Color3.fromRGB(0, 120, 255)  -- Cor do fundo do botão
toggleButton.Parent = frame

-- Variável para controlar o estado do ESP
local espEnabled = false

-- Função para ativar/desativar o ESP
local function toggleESP()
    espEnabled = not espEnabled
    if espEnabled then
        -- Ativar ESP
        local espScript = loadstring(game:HttpGet("https://scriptblox.com/raw/Universal-Script-3d-Box-ESP-5346"))()
        espScript()  -- Executa o script ESP

        -- Se o script ESP requer desativação, você pode armazenar e chamar a função de desativação aqui
    else
        -- Desativar ESP
        -- Aqui você deve adicionar a lógica para desativar o ESP se o script precisar
        -- Exemplo fictício: (Você precisará modificar isso com base na implementação do seu ESP)
        -- if espScript then espScript:Disable() end
    end
end

-- Conectar o botão ao evento de clique
toggleButton.MouseButton1Click:Connect(toggleESP)
