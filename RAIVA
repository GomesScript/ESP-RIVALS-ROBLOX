-- LocalScript dentro do Frame

-- Referências aos botões
local aimbotButton = script.Parent:WaitForChild("AimbotButton")
local espButton = script.Parent:WaitForChild("ESPButton")
local powerjumpButton = script.Parent:WaitForChild("PowerjumpButton")
local speedhackButton = script.Parent:WaitForChild("SpeedhackButton")

-- Função para ativar/desativar Aimbot
local function toggleAimbot()
    -- Código para ativar/desativar aimbot
end

-- Função para ativar/desativar ESP
local function toggleESP()
    -- Código para ativar/desativar ESP
end

-- Função para ativar/desativar Powerjump
local function togglePowerjump()
    -- Código para ativar/desativar powerjump
end

-- Função para ativar/desativar Speedhack
local function toggleSpeedhack()
    -- Código para ativar/desativar speedhack
end

-- Conectando funções aos botões
aimbotButton.MouseButton1Click:Connect(toggleAimbot)
espButton.MouseButton1Click:Connect(toggleESP)
powerjumpButton.MouseButton1Click:Connect(togglePowerjump)
speedhackButton.MouseButton1Click:Connect(toggleSpeedhack)
