local CoastingLibrary = loadstring(game:HttpGet("https://raw.githubusercontent.com/GhostDuckyy/UI-Libraries/main/Coasting%20Ui%20Lib/source.lua"))()

-- Criação do menu principal com título
local MainTab = CoastingLibrary:CreateTab("PRIME CHEAT")

-- Seções de funcionalidades
local EspSection = MainTab:CreateSection("ESP")
local FlySection = MainTab:CreateSection("Fly")
local MiscSection = MainTab:CreateSection("Misc")

-- ESP
EspSection:CreateToggle("ESP", function(enabled)
    if enabled then
        -- Add ESP functionality
        local function addESP(part)
            local highlight = Instance.new("Highlight", part)
            highlight.FillColor = Color3.fromRGB(255, 0, 0)
            highlight.FillTransparency = 0.5
        end
        
        -- Apply ESP to all existing parts
        for _, part in pairs(workspace:GetDescendants()) do
            if part:IsA("BasePart") then
                addESP(part)
            end
        end
        
        -- Apply ESP to new parts
        workspace.DescendantAdded:Connect(function(part)
            if part:IsA("BasePart") then
                addESP(part)
            end
        end)
    else
        -- Remove ESP functionality
        for _, part in pairs(workspace:GetDescendants()) do
            if part:IsA("BasePart") and part:FindFirstChildOfClass("Highlight") then
                part.Highlight:Destroy()
            end
        end
    end
end)

-- FLY
FlySection:CreateToggle("Fly", function(enabled)
    if enabled then
        -- Add Fly functionality
        local player = game.Players.LocalPlayer
        local character = player.Character or player.CharacterAdded:Wait()
        local humanoidRootPart = character:WaitForChild("HumanoidRootPart")
        local bodyVelocity = Instance.new("BodyVelocity", humanoidRootPart)
        bodyVelocity.Velocity = Vector3.new(0, 0, 0)
        bodyVelocity.MaxForce = Vector3.new(4000, 4000, 4000)
        
        local bodyGyro = Instance.new("BodyGyro", humanoidRootPart)
        bodyGyro.CFrame = humanoidRootPart.CFrame
        bodyGyro.MaxTorque = Vector3.new(4000, 4000, 4000)
        
        game:GetService("RunService").RenderStepped:Connect(function()
            if bodyVelocity and bodyGyro then
                bodyVelocity.Velocity = (game.Players.LocalPlayer:GetMouse().Hit.p - humanoidRootPart.Position).unit * 50
            end
        end)
    else
        -- Remove Fly functionality
        local player = game.Players.LocalPlayer
        local character = player.Character or player.CharacterAdded:Wait()
        local humanoidRootPart = character:WaitForChild("HumanoidRootPart")
        
        for _, v in pairs(humanoidRootPart:GetChildren()) do
            if v:IsA("BodyVelocity") or v:IsA("BodyGyro") then
                v:Destroy()
            end
        end
    end
end)

-- Miscellaneous
local speedValue = 16  -- Default speed value

MiscSection:CreateSlider("Speed", 0, 100, 16, false, function(value)
    speedValue = value
    local player = game.Players.LocalPlayer
    local character = player.Character or player.CharacterAdded:Wait()
    local humanoid = character:WaitForChild("Humanoid")
    humanoid.WalkSpeed = speedValue
    print("Speed:", speedValue)
end)

MiscSection:CreateToggle("Power Jump", function(enabled)
    local player = game.Players.LocalPlayer
    local character = player.Character or player.CharacterAdded:Wait()
    local humanoid = character:WaitForChild("Humanoid")
    
    if enabled then
        humanoid.JumpPower = 100  -- Set desired jump power here
    else
        humanoid.JumpPower = 50  -- Default jump power
    end
end)
