-- Certifique-se de ter a biblioteca RoStrap no seu projeto
local RoStrap = require(game.ReplicatedStorage:WaitForChild("RoStrap"))
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local LocalPlayer = Players.LocalPlayer

-- Criação do Menu GUI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "MenuGUI"
screenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

local menuFrame = Instance.new("Frame")
menuFrame.Size = UDim2.new(0.3, 0, 0.5, 0)
menuFrame.Position = UDim2.new(0.7, 0, 0.25, 0)
menuFrame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
menuFrame.Parent = screenGui

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0.1, 0)
title.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
title.Text = "Menu Hacks"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Parent = menuFrame

-- Adicionar botões para cada funcionalidade
local function createButton(name, position, callback)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(1, 0, 0.1, 0)
    button.Position = position
    button.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
    button.Text = name
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.Parent = menuFrame
    
    button.MouseButton1Click:Connect(callback)
end

-- Funções de funcionalidades
local function toggleFly()
    -- Implementar a funcionalidade Fly aqui
end

local function toggleAimbot()
    -- Implementar a funcionalidade Aimbot aqui
end

local function toggleESP()
    -- Implementar a funcionalidade ESP aqui
end

local function toggleSpeedhack()
    -- Implementar a funcionalidade Speedhack aqui
end

local function togglePowerjump()
    -- Implementar a funcionalidade Powerjump aqui
end

-- Adicionar botões ao menu
createButton("Fly", UDim2.new(0, 0, 0.2, 0), toggleFly)
createButton("Aimbot", UDim2.new(0, 0, 0.35, 0), toggleAimbot)
createButton("ESP", UDim2.new(0, 0, 0.5, 0), toggleESP)
createButton("Speedhack", UDim2.new(0, 0, 0.65, 0), toggleSpeedhack)
createButton("Powerjump", UDim2.new(0, 0, 0.8, 0), togglePowerjump)

-- Toggle Menu Visibility
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if input.KeyCode == Enum.KeyCode.M and not gameProcessed then
        menuFrame.Visible = not menuFrame.Visible
    end
end)
